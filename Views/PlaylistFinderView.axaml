<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="700"
             x:Class="SpotiStore.Views.PlaylistFinderView">

  <DockPanel>
    <Button DockPanel.Dock="Bottom">Archive Selections</Button>
    <ProgressBar DockPanel.Dock="Bottom"></ProgressBar>
    <StackPanel>
      
      <Panel>
        <TextBox Margin="4" Watermark="Spotify Playlist ID"></TextBox>
        <Button Margin="4" HorizontalAlignment="Right">Search</Button>
      </Panel>
      <Panel>
        <TextBlock Margin="4" HorizontalAlignment="Left">Playlist Name:</TextBlock>
      </Panel>
      <ScrollViewer>
        <StackPanel Tag="Data Option">
          <CheckBox Margin="4">Track number</CheckBox>
          <CheckBox Margin="4">Song Title</CheckBox>
          <CheckBox Margin="4">Artist Name</CheckBox>
          <CheckBox Margin="4">Album Name</CheckBox>
          <CheckBox Margin="4">Album Release Year</CheckBox>
          <CheckBox Margin="4">Album Publisher</CheckBox>
          <CheckBox Margin="4">Discogs Links</CheckBox>
        </StackPanel>
      </ScrollViewer>

        <!--<Button Content="{Binding UserSearchText}" Click="{Binding Get_User}">Get User</Button>-->
        <!--<ComboBox Margin="4" SelectedIndex="0">
          <ComboBoxItem>Inline Items</ComboBoxItem>
          <ComboBoxItem>Inline Item 2</ComboBoxItem>
          <ComboBoxItem>Inline Item 3</ComboBoxItem>
          <ComboBoxItem>Inline Item 4</ComboBoxItem>
        </ComboBox>-->
      <!--<CheckBox Margin="4">Include Discogs Links</CheckBox>-->
    </StackPanel>
  </DockPanel>
</UserControl>
